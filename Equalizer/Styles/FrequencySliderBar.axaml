<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Classes="FrequencyBorder">
            <StackPanel>
                <TextBlock Text="Name" />
                <Slider
                    Maximum="9"
                    Minimum="-9"
                    Orientation="Vertical"
                    Value="0" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    <Style Selector="Border.FrequencyBorder">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderBrush" Value="#abaeb1" />
        <Setter Property="BorderThickness" Value="5" />
        <Setter Property="Background" Value="#c1c2c3" />
    </Style>
    <Style Selector="Border.FrequencyBorder > StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style Selector="Border.FrequencyBorder > StackPanel > TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="Foreground" Value="#323233" />
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>
    <Style Selector="Border.FrequencyBorder > StackPanel > Slider">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="#498cb8" />
        <Setter Property="Background" Value="#323233" />
        <Setter Property="TickPlacement" Value="Outside" />
        <Setter Property="TickFrequency" Value="0.5" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="IsSnapToTickEnabled" Value="True" />
        <Setter Property="Height" Value="300" />
    </Style>
    <Style Selector="Border.FrequencyBorder > StackPanel > Slider /template/ Thumb">
        <Setter Property="Background" Value="#498cb8" />
    </Style>
    <Style Selector="Border.FrequencyBorder > StackPanel > Slider /template/ Thumb:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.1)" />
    </Style>
</Styles>
